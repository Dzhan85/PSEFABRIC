submodule addresses {

  yang-version "1";
  belongs-to policy {
	  prefix policy;
  }

  import ietf-inet-types { prefix ietf; }
  import structure { prefix structure; }
  
  
  list addresses {
	  key address-name;
	  leaf address-name {
		  mandatory true;
		  type string;
	  }
	  leaf address-alias-1 {
		  type string;
		  mandatory true;
	  }
	  leaf configure {
		  mandatory true;
		  type boolean;
	  }
	  leaf ipv4-prefix {
		  mandatory true;
		  type ietf:ipv4-prefix;
		  description
			  "ipv4 prefix";
  	  }
	  container structure {
		  leaf dc {
			  type leafref {
				  path "/structure:structure/structure:data-center";
			  }
			  mandatory true;
		  }
		  leaf area {
			  type leafref {
				  path "/structure:structure/structure:area";
			  }
			  mandatory true;
		  }
		  leaf zone {
			  type leafref {
				  path "/structure:structure/structure:zone";
			  }
			  mandatory true;
		  }
		  leaf sub-zone {
			  type leafref {
				  path "/structure:structure/structure:sub-zone";
			  }
			  mandatory true;
		  }
		  leaf tag {
			  type leafref {
				  path "/structure:structure/structure:tag";
			  }
			  mandatory false;
		  }
	  }

  }
  
  list address-sets {
	  key address-set-name;
	  leaf address-set-name {
		  mandatory true;
		  type string;
	  }
	  leaf address-set-alias-1 {
		  type string;
		  default '';
	  }
	  leaf address-set-alias-2 {
		  when "../epg = 'true'";
		  type string;
		  mandatory true;
	  }
	  leaf configure {
		  mandatory true;
		  type boolean;
	  }
	  leaf epg {
		  mandatory true;
		  type boolean;  
	  }
	  
	  leaf parameters {
		  when "../epg = 'true'";
		  type string;
		  mandatory true;  
	  }
	  
 	  leaf-list addresses {
 		  min-elements 1;
		  type leafref {
			  path "/addresses/address-name";
		  }
      }
	  
  }
  
} 
  
